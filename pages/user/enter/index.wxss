.wrap{
  margin: 27rpx 20rpx 33rpx;
  border-radius: 5px;
  padding-top: 25rpx;
  padding-bottom: 29rpx;
}

.title{
  font-size: 27rpx;
  color: #fff;
  margin-bottom: 23rpx;
  line-height: 50rpx;
  width: 150rpx;
  text-align: center;
  background-color: #39393b;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
}
.text{
  margin: 0 26rpx;
  font-size: 26rpx;
  color: #666;
  border: 1rpx dashed #ccc;
  font-size: 26rpx;
  color: #666;
  padding:  25rpx 20rpx;
  box-sizing: border-box;
  border-radius: 5px;
  line-height: 46rpx;
}

form .info{
  padding: 18rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info text{
  border-left: 10rpx solid #333;
  padding-left: 23rpx;
}

.form-item{
  padding: 27rpx 35rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  color: #666;
  line-height: 52rpx;
}

.form-item .label{
  
  margin-right: 34rpx;
}

.form-item .label i{
  color: red;
  margin-left: 10rpx;
}

.form-item .input{
  flex: 1;
}

input{
  font-size: 26rpx;
  color: #999;
}

.input .time{
  width: 70rpx;
  display: inline-block;
}

.input span{
  display: inline-block;
  vertical-align: top;
  margin-left: 15rpx;
  margin-right: 24rpx;
}

textarea{
  width: 481rpx;
  height: 100rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 26rpx;
}

input, textarea {
  -webkit-user- select: auto!important;
  -khtml-user-select: auto!important;
  -moz-user-select: auto!important;
  -ms-user-select: auto!important;
  -o-user-select: auto!important;
  user-select: auto!important;
}

.button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  height: 82rpx;
  line-height: 82rpx;
  color: #fff;
  font-size: 31rpx;
  background-color: #39393b;
  width: 710rpx;
}

