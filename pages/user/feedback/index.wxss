.wrap{
  margin: 27rpx 20rpx 33rpx;
  border-radius: 5px;
  padding-top: 25rpx;
  padding-bottom: 29rpx;
}

.title{
  font-size: 27rpx;
  color: #fff;
  margin-bottom: 23rpx;
  line-height: 50rpx;
  width: 150rpx;
  text-align: center;
  background-color: #39393b;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
}

.placeholder{
  font-size: 25rpx;
  color: #666;
}

.text{
  margin: 0 26rpx;
}

textarea{
  border: 1rpx dashed #ccc;
  width: 100%;
  height: 311rpx;
  font-size: 25rpx;
  color: #666;
  padding:  25rpx 20rpx;
  box-sizing: border-box;
  border-radius: 5px;
}

.button{
  height: 82rpx;
  line-height: 82rpx;
  color: #fff;
  font-size: 31rpx;
  background-color: #39393b;
  width: 710rpx;
}