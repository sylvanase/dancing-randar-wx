.cover image{
  width: 100%;
  height: 297rpx;
  vertical-align: bottom;
}

.title{
  border-left: 11rpx solid #333;
  line-height: 35rpx;
  font-size: 31rpx;
  padding-left: 18rpx;
  margin: 20rpx auto;
}

.address{
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  font-size: 24rpx;
  line-height: 61rpx;
}

.address i,.info i{
  width: 27rpx;
  height: 27rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.info{
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 24rpx;
}


.left{
  flex: 1;
  border-right: 1rpx solid #eee;
}

.left view{
  line-height: 60rpx;
}

.right{
  width: 123rpx;
  text-align: center;
  line-height: 130rpx;
}

.right i{
  width: 36rpx;
  height: 36rpx;
}

.des{
  border-top: 1rpx solid #eee;
  font-size: 24rpx;
  line-height: 40rpx;
  padding:  24rpx;
}

.pic-list{
  padding: 18rpx;
  border-top: 1rpx solid #eee;
}

.pic-list .item image{
  width: 100%;
  margin-bottom: 15rpx;
}